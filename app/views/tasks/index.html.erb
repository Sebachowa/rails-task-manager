<div id="todo_list">
  <h1>My TODO List!</h1>
  <ul>
    <% @tasks.each do |task| %>
      <div id="task">
        <li>Done: <%= task.done %> - Name: <%= task.name %> - Description: <%= task.description %></li>
        <div id="task_button">
          <%= link_to "Show", task_path(task), class: "btn btn-info" %>
          <%= link_to "Edit", task_edit_path(task), class: "btn btn-warning"%>
          <%= link_to "Destroy", task_path(task), method: "delete", data: { confirm: "ARE YOU SUUUURE ?"}, class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </ul>
  <%= link_to "Create a new Task", tasks_new_path, class: "btn btn-success"%>
</div>

